    <!-- JavaScript -->
    <script>
        // تبديل التبويبات
        document.querySelectorAll('.tab-item').forEach(tab => {
            tab.addEventListener('click', function() {
                // إخفاء جميع الأقسام
                document.querySelectorAll('.content-section').forEach(section => {
                    section.classList.remove('active');
                });
                
                // إلغاء تنشيط جميع التبويبات
                document.querySelectorAll('.tab-item').forEach(t => {
                    t.classList.remove('active');
                });
                
                // تفعيل التبويب الحالي
                this.classList.add('active');
                
                // إظهار القسم المناسب
                const tabId = this.getAttribute('data-tab');
                document.getElementById(tabId).classList.add('active');
            });
        });
        
        // محاكاة الماسح
        document.getElementById('startScan').addEventListener('click', function() {
            const scannerView = document.getElementById('scannerView');
            scannerView.innerHTML = `
                <div style="text-align: center;">
                    <i class="fas fa-camera" style="font-size: 3rem; animation: pulse 1s infinite;"></i>
                    <p style="margin-top: 20px;">جارٍ تشغيل الكاميرا...</p>
                    <button class="scan-btn" style="background: var(--danger); margin-top: 20px;" id="stopScan">
                        <i class="fas fa-stop"></i> إيقاف
                    </button>
                </div>
            `;
            
            // محاكاة مسح ناجح بعد 3 ثوانٍ
            setTimeout(() => {
                scannerView.innerHTML = `
                    <div style="text-align: center; padding: 20px;">
                        <i class="fas fa-check-circle" style="font-size: 4rem; color: #2A9D8F;"></i>
                        <p style="margin-top: 20px;">تم المسح بنجاح!</p>
                        <p style="font-size: 0.9rem;">منتج: حليب المراعي المغربي</p>
                        <p style="font-size: 0.9rem;">التقييم الصحي: 85/100</p>
                    </div>
                `;
                
                // زيادة العداد
                const count = parseInt(document.getElementById('scanCount').textContent);
                document.getElementById('scanCount').textContent = count + 1;
                
                // عرض إعلان
                showAd();
            }, 3000);
        });
        
        // إظهار إعلان
        function showAd() {
            const ads = document.querySelectorAll('.ad-container');
            ads.forEach(ad => {
                ad.innerHTML = `
                    <small style="color: #666;">إعلان</small>
                    <div style="min-height: 100px; display: flex; align-items: center; justify-content: center; background: #f0f0f0; border-radius: 5px;">
                        <p style="color: #666;">شكراً لدعمك! هذا إعلان تجريبي</p>
                    </div>
                    <p style="font-size: 0.8rem; color: #999; margin-top: 5px;">الإعلانات تساعدنا على تطوير التطبيق</p>
                `;
            });
        }
        
        // محاكاة الإعلانات عند تحميل الصفحة
        window.addEventListener('load', function() {
            setTimeout(showAd, 1000);
        });
        
        console.log('تطبيق صحتي أولاً جاهز للعمل!');
    </script>
